generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}
enum Role {
  USER
  ADMIN
}

enum EventStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String   // niekada nelaikom plain text
  role         Role     @default(USER)
  isBlocked    Boolean  @default(false)
  createdAt    DateTime @default(now())

  events       Event[]
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  slug   String  @unique

  events Event[]
}

model Event {
  id          Int         @id @default(autoincrement())
  title       String
  location    String
  startsAt    DateTime
  imageUrl    String?
  status      EventStatus @default(PENDING)

  // užduotyje: bendras reitingas (paspaudimų skaičius)
  ratingCount Int         @default(0)

  createdAt   DateTime    @default(now())

  categoryId  Int
  category    Category    @relation(fields: [categoryId], references: [id])

  createdById Int
  createdBy   User        @relation(fields: [createdById], references: [id])
}
